{
   "root": {
      "dev": "./src",
      "dist": "./dist"
   },
   "html": {
      "dev": "html",
      "dist": "./",
      "parts": "templates",
      "run": true
   },
   "css": {
      "dev": "public/sass",
      "dist": "public/css",
      "parts": "parts",
      "extensions": "*.+(css|scss)",
      "uncss": false
   },
   "js": {
      "dev": "public/js",
      "dist": "public/js",
      "parts": "modules",
      "extensions": [".json", ".js"]
   },
   "img": {
      "dev": "public/images/**/",
      "dist": "public/images",
      "extensions": "*.+(jpg|jpeg|gif|png|svg)"
   },
   "svg": {
      "dev": "public/images/svg",
      "dist": "public/images"
   },
   "fonts": {
      "dev": "public/fonts",
      "dist": "public/fonts",
      "extensions": "*.+(woff2|woff|eot|ttf|svg)"
   },
   "static": {
      "dev": "public/lib",
      "dist": "public/lib"
   },
   "deploy": {
      "hostname": "",
      "username": "",
      "path": "/",
      "password": ""
   },
   "browserSync": {
    "port": 2333,
    "proxy": {
      "target": "",
      "publicPath" : "",
      "files": [
        "../*.php"
      ]
    }
   }
}
